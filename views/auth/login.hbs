<h1 id="login-title">Log In to Kahani</h1>
{{> flash_messages}}

<div id="login-form">
  <form action="/process-login" method="POST">
    <div class="form-group">
      <label for="inputUsername">Username</label>
      <input type="text" name="username" class="form-control" id="inputUsername" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label for="inputPassword">Password</label>
      <input type="password" name="originalPassword" class="form-control" id="inputPassword" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>