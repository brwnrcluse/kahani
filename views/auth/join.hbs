<h1>Join</h1>

{{> flash_messages}}

<form action="/process-join" method="POST">
  <label>
    Username:
    <input type="text" name="username" required />
  </label>
  <label>
    Email:
    <input type="email" name="email" required />
  </label>
  <label>
    Password:
    <input type="password" name="originalPassword" required />
  </label>

  <button>Save</button>
</form>